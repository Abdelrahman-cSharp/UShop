@model UShop.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>
<h3 class="text-danger">Are you sure you want to delete this category?</h3>
<hr />

@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger">
        @TempData["ErrorMessage"]
        </div>
}

@if (ViewBag.ErrorMessage != null)
{
        <div class="alert alert-danger">
        @ViewBag.ErrorMessage
        </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Category Name:</dt>
                    <dd class="col-sm-9">
                        <strong>@Html.DisplayFor(model => model.Name)</strong>
                    </dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model?.Description))
                        {
                            @Html.DisplayFor(model => model.Description)
                        }
                        else
                        {
                                <span class="text-muted">No description</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Products Count:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model?.Products != null && Model.Products.Any() ? "bg-warning" : "bg-success") fs-6">
                            @(Model?.Products?.Count ?? 0) Products
                        </span>
                    </dd>
                </dl>

                @if (Model?.Products != null && Model.Products.Any())
                {
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle"></i> Warning!</h6>
                            <p>This category contains <strong>@Model.Products.Count</strong> product(s). You must delete or reassign all products before deleting this category.</p>

                            <h6>Products in this category:</h6>
                            <ul>
                            @foreach (var product in Model.Products.Take(5))
                            {
                                        <li>@product.Name</li>
                            }
                            @if (Model.Products.Count > 5)
                            {
                                        <li><em>... and @(Model.Products.Count - 5) more</em></li>
                            }
                            </ul>
                        </div>
                }
                else
                {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            This category is empty and can be safely deleted.
                        </div>
                }
            </div>
            <div class="card-footer">
                @if (Model?.Products == null || !Model.Products.Any())
                {
                        <form asp-action="Delete" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete Category" class="btn btn-danger me-2" 
                                   onclick="return confirm('Are you absolutely sure you want to delete this category? This action cannot be undone.')" />
                        </form>
                }
                else
                {
                        <button class="btn btn-danger me-2" disabled>
                            <i class="fas fa-ban"></i> Cannot Delete (Contains Products)
                        </button>
                }

                <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-outline-primary me-2">
                    <i class="fas fa-eye"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Alternative Actions</h5>
            </div>
            <div class="card-body">
                @if (Model?.Products != null && Model.Products.Any())
                {
                        <div class="mb-3">
                            <h6>To delete this category:</h6>
                            <ol>
                                <li>Delete all products in this category, OR</li>
                                <li>Move products to another category</li>
                                <li>Then return to delete this category</li>
                            </ol>
                        </div>

                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@Model.Id" class="btn btn-primary btn-sm w-100 mb-2">
                            <i class="fas fa-list"></i> Manage Products
                        </a>
                }

                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm w-100 mb-2">
                    <i class="fas fa-edit"></i> Edit Instead
                </a>

                <a asp-action="Create" class="btn btn-success btn-sm w-100">
                    <i class="fas fa-plus"></i> Create New Category
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />