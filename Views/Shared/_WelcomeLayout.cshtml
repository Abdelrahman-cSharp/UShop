            }

            .search-container input {
                border: none;
                outline: none;
                flex-grow: 1;
                padding: 5px;
                font-size: 16px;
            }

        .cart-icon {
            color: white;
            font-size: 24px;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .cart-icon:hover {
                transform: scale(1.1);
            }

        .cart-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #ffd700;
            color: #333;
            border-radius: 50%;
