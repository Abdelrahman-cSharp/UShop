        .dot {
            width: 15px;
            height: 15px;
            background: white;
            border-radius: 50%;
            animation: dotPulse 1.5s infinite ease-in-out;
        }

            .dot:nth-child(1) {
                animation-delay: 0s;
            }

            .dot:nth-child(2) {
                animation-delay: 0.2s;
            }

            .dot:nth-child(3) {
                animation-delay: 0.4s;
            }

        @@keyframes dotPulse {
            0%, 60%, 100%

        {
            transform: scale(1);
            opacity: 1;
        }

        30% {
            transform: scale(1.5);
            opacity: 0.7;
        }

