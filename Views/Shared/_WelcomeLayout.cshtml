    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: #f8f9fa;
            overflow-x: hidden;
        }

        /* Navigation */
        .navbar {
            background: linear-gradient(135deg, #ff4757, #ff3838);
            padding: 15px 0;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 4px 20px rgba(255, 71, 87, 0.3);
            animation: slideDown 0.8s ease-out;
        }

        @@keyframes slideDown {
            from

        {
            transform: translateY(-100%);
        }

        to {
            transform: translateY(0);
        }

        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
        }

        .logo {
            font-size: 32px;
            font-weight: bold;
            color: white;
            text-decoration: none;
            animation: bounce 2s infinite;
        }

            .logo span {
                color: #ffd700;
            }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100%

        {
            transform: translateY(0);
        }

        40% {
