			.ushop-dropdown-content-016.show {
				display: block;
				opacity: 1;
				transform: translateY(0) scale(1);
				animation: dropdownAppear 0.4s ease;
			}

			.ushop-dropdown-content-016 a {
				color: #333;
				padding: 14px 20px;
				text-decoration: none;
				display: flex;
				align-items: center;
				transition: all 0.2s ease;
				border-bottom: 1px solid #f1f1f1;
				font-weight: 500;
			}

				.ushop-dropdown-content-016 a:hover {
					background-color: #ffefef;
					padding-left: 25px;
					color: #ff4757;
				}

				.ushop-dropdown-content-016 a:last-child {
					border-bottom: none;
					color: #ff3838;
				}

				.ushop-dropdown-content-016 a i {
					margin-right: 12px;
					width: 20px;
					text-align: center;
				}

		@@keyframes dropdownAppear {
			0% {
				opacity: 0;
				transform: translateY(-10px) scale(0.95);
			}

			100% {
				opacity: 1;
				transform: translateY(0) scale(1);
			}
		}

		/* Mobile Menu Toggle */
		.ushop-hamburger-004 {
			display: none;
			flex-direction: column;
			justify-content: space-around;
			width: 30px;
			height: 25px;
			background: transparent;
			border: none;
			cursor: pointer;
			padding: 0;
		}

			.ushop-hamburger-004 span {
				width: 100%;
				height: 3px;
				background-color: white;
				border-radius: 5px;
				transition: all 0.3s ease;
				transform-origin: center;
			}

		/* Demo Content */
		.ushop-page-content-017 {
			max-width: 1200px;
			margin: 30px auto;
			padding: 20px;
			background: white;
			border-radius: 15px;
			box-shadow: 0 8px 25px rgba(0,0,0,0.1);
		}

		.ushop-page-title-018 {
			color: #ff4757;
			margin-bottom: 20px;
			padding-bottom: 15px;
			border-bottom: 3px solid #ffefef;
			font-size: 2.2em;
			font-weight: 700;
		}

		.ushop-sellers-grid-019 {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
			gap: 25px;
			margin-top: 30px;
		}

		.ushop-seller-card-020 {
			background: linear-gradient(135deg, #f9f9f9, #ffffff);
			border-radius: 15px;
			padding: 25px;
			text-align: center;
			transition: all 0.3s ease;
			border: 2px solid #eee;
			box-shadow: 0 4px 15px rgba(0,0,0,0.05);
		}

			.ushop-seller-card-020:hover {
				transform: translateY(-8px);
				box-shadow: 0 15px 35px rgba(0,0,0,0.15);
				border-color: #ff4757;
			}

		.ushop-seller-logo-021 {
			width: 90px;
			height: 90px;
			border-radius: 50%;
			object-fit: cover;
			margin-bottom: 20px;
			border: 3px solid #ff4757;
			padding: 3px;
			transition: all 0.3s ease;
		}

		.ushop-seller-card-020:hover .ushop-seller-logo-021 {
			transform: scale(1.1);
			border-color: #ffd700;
		}

		.ushop-seller-name-022 {
			font-weight: bold;
			color: #333;
			margin-bottom: 8px;
			font-size: 1.2em;
		}

		.ushop-seller-desc-023 {
			color: #666;
			font-size: 0.95em;
			line-height: 1.4;
		}

		/* Responsive Design */
		@@media (max-width: 1024px) {
			.ushop-search-container-008 {
				max-width: 300px;
			}

			.ushop-nav-links-005 {
				gap: 5px;
			}

			.ushop-nav-link-006 {
				padding: 10px 15px;
				font-size: 14px;
			}
		}

		@@media (max-width: 768px) {
			.ushop-hamburger-004 {
				display: flex;
			}

			.ushop-nav-links-005 {
				display: none;
				width: 100%;
				flex-direction: column;
				gap: 15px;
				margin-top: 20px;
				background: rgba(255, 71, 87, 0.95);
				padding: 20px;
				border-radius: 15px;
				backdrop-filter: blur(10px);
			}

				.ushop-nav-links-005.active {
					display: flex;
					animation: slideIn 0.5s ease;
				}

			.ushop-search-container-008 {
				margin: 15px 0;
				width: 100%;
				order: 3;
			}

			.ushop-nav-container-002 {
				flex-wrap: wrap;
			}

			.ushop-hamburger-004.active span:nth-child(1) {
				transform: rotate(45deg) translate(6px, 6px);
			}

			.ushop-hamburger-004.active span:nth-child(2) {
				opacity: 0;
			}

			.ushop-hamburger-004.active span:nth-child(3) {
				transform: rotate(-45deg) translate(6px, -6px);
			}

			.ushop-dropdown-content-016 {
				right: -20px;
				min-width: 200px;
			}

			.ushop-sellers-grid-019 {
				grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				gap: 20px;
			}
		}

		@@keyframes slideIn {
			from {
				opacity: 0;
				transform: translateY(-20px);
			}

			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@@media (max-width: 480px) {
			.ushop-nav-container-002 {
				padding: 10px 15px;
			}

			.ushop-logo-003 {
				font-size: 24px;
			}

			.ushop-nav-icons-010 {
				gap: 10px;
			}

			.ushop-user-btn-015 {
				padding: 8px 15px;
				font-size: 13px;
			}

			.ushop-sellers-grid-019 {
				grid-template-columns: 1fr;
			}
		}
	</style>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>