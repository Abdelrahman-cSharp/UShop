<body>
	<header>
		<!-- New Nav-->
		<nav class="ushop-navbar-001">
			<div class="ushop-nav-container-002">
				<!-- Logo -->
				<a class="ushop-logo-003" asp-controller="Home" asp-action="Index">
					<i class="fas fa-shopping-bag"></i>
					U<span>SHOP</span>
				</a>

				<!-- Hamburger Menu (Mobile) -->
				<button class="ushop-hamburger-004" id="hamburgerBtn">
					<span></span>
					<span></span>
					<span></span>
				</button>

				<!-- Navigation Links -->
				<ul class="ushop-nav-links-005" id="navLinks">
					<li><a asp-area="" asp-controller="Seller" asp-action="Browse" class="ushop-nav-link-006"><i class="fas fa-store"></i>Sellers</a></li>
					<li><a asp-area="" asp-controller="Categories" asp-action="Index" class="ushop-nav-link-006"><i class="fas fa-list"></i>Categories</a></li>
					<li><a asp-area="" asp-controller="Products" asp-action="Shopping" class="ushop-nav-link-006"><i class="fas fa-tag"></i>Products</a></li>
				</ul>

				<!-- Search Bar -->
				<div class="ushop-search-container-008">
					<form asp-controller="Products" asp-action="Shopping" method="get" class="d-flex">
						<input type="text"
							   placeholder="Search for products, brands, and more..."
							   name="searchString"
							   value="@(ViewData["CurrentFilter"] ?? string.Empty)"
							   id="searchInput"
							   class="form-control me-2" />
						<button type="submit" class="btn btn-primary ushop-search-btn-009" id="searchBtn">
							<i class="fas fa-search"></i>
						</button>
					</form>
					<style>
						.ushop-search-container-008 form {
							display: flex;
							align-items: center;
						}
					</style>
				</div>


				<!-- Icons & User Menu -->
				<div class="ushop-nav-icons-010">
					@* <!-- Wishlist -->
					<a href="#" class="ushop-icon-button-011" title="Wishlist">
						<i class="fas fa-heart"></i>
						<span class="ushop-wishlist-count-012">3</span>
					</a> *@
					@if (User.IsInRole(Roles.Customer))
					{
						<!-- Shopping Cart -->
						<a asp-controller="Cart" asp-action="Index"
						   class="ushop-icon-button-011" title="Shopping Cart">
							<i class="fas fa-shopping-cart"></i>
							<span class="ushop-cart-count-013">5</span>
						</a>
					}
					else if (User.IsInRole(Roles.Seller))
					{
						<!-- Seller Dashboard -->
						<a asp-controller="Products" asp-action="Index"
						   class="ushop-nav-link-006" title="Seller Dashboard">
							<i class="fas fa-store"></i>My Products
						</a>
					}
					else if (User.IsInRole(Roles.Admin))
					{
						<!-- Admin Dropdown Menu -->
						<nav class="navbar navbar-expand-lg">
							<ul class="navbar-nav">
								<li class="nav-item dropdown position-relative">
									<a class="nav-link dropdown-toggle ushop-nav-link-006" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										⚙️ Administration
									</a>
									<ul class="dropdown-menu ushop-dropdown-content-016 dropdown-menu-end shadow-lg border-0 rounded-3 p-2" aria-labelledby="adminDropdown">
										<a class="dropdown-item" asp-controller="Customer" asp-action="Index">
											👤 Customers
										</a>
										<a class="dropdown-item" asp-controller="Seller" asp-action="Browse">
											🛍️ Sellers
										</a>
										<a class="dropdown-item" asp-controller="Admin" asp-action="Index">
											🛠️ Admins
										</a>
										<a class="dropdown-item" asp-controller="Products" asp-action="Index">
											📦 All Products
										</a>
									</ul>
								</li>
							</ul>
						</nav>
					}


					<!-- User Menu -->
					<div class="ushop-user-menu-014">
						<button class="ushop-user-btn-015" id="accountButton">
							<i class="fas fa-user-circle"></i> Account
						</button>
						<div class="ushop-dropdown-content-016" id="dropdownMenu">
							<a asp-controller="Account" asp-action="Profile"><i class="fas fa-user"></i>My Profile</a>
							<a asp-controller="Orders" asp-action="Index"><i class="fas fa-box"></i>My Orders</a>
							@if (User.IsInRole(Roles.Customer))
							{
								<a href="#"><i class="fas fa-heart"></i>Wishlist</a>
							}
							<form method="post" asp-controller="Account" asp-action="Logout" class="d-inline w-100">
								<button type="submit" class="dropdown-item dropdown-item-profile rounded-2 py-2 px-3 border-0 bg-transparent w-100 text-start">
									<i class="fas fa-sign-out-alt me-2 text-danger"></i>Logout
								</button>
							</form>
						</div>
					</div>
					<script>
						document.addEventListener("DOMContentLoaded", function () {
							const accountButton = document.getElementById("accountButton");
							const dropdownMenu = document.getElementById("dropdownMenu");

							if (accountButton && dropdownMenu) {
								accountButton.addEventListener("click", function (e) {
									e.stopPropagation();
									dropdownMenu.classList.toggle("show");
								});

								// Close if click outside
								document.addEventListener("click", function () {
									dropdownMenu.classList.remove("show");
								});
							}
						});
					</script>

				</div>
			</div>
		</nav>
	</header>

	<!-- Main Content -->
	<div class="container mt-3">
		<main role="main" class="pb-3">
			<!-- Alert Messages -->
			@if (TempData["Success"] != null)
			{
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<i class="fas fa-check-circle me-2"></i>@TempData["Success"]
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
			@if (TempData["Error"] != null)
			{
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
			@if (TempData["Info"] != null)
			{
				<div class="alert alert-info alert-dismissible fade show" role="alert">
					<i class="fas fa-info-circle me-2"></i>@TempData["Info"]
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
			@if (TempData["Warning"] != null)
			{
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}

			@RenderSection("Styles", required: false)
			@RenderBody()
		</main>
	</div>

	<footer>
		<div class="container">
			&copy; 2025 - UShop | <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script>
		// Auto-hide alerts after 5 seconds
		setTimeout(function() {
			$('.alert').fadeOut('slow');
		}, 5000);

		// Enhanced dropdown behavior
		$(document).ready(function() {
			// Close dropdowns when clicking outside
			$(document).click(function(e) {
				if (!$(e.target).closest('.dropdown').length) {
					$('.dropdown-menu').removeClass('show');
				}
			});
		});
	</script>
