<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>USHOP</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	@RenderSection("Scripts", required: false)
</head>
<body>
	<nav class="navbar">
		<div class="nav-container">
			<!-- Logo -->
			<a class="logo" asp-controller="Home" asp-action="Index">
				<i class="fas fa-shopping-bag"></i>
				U<span>SHOP</span>
			</a>

			<!-- Hamburger Menu (Mobile) -->
			<button class="hamburger" id="hamburgerBtn">
				<span></span>
				<span></span>
				<span></span>
			</button>

			<!-- Navigation Links -->
			<ul class="nav-links" id="navLinks">
				<li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link active"><i class="fas fa-home"></i>Home</a></li>
				<li><a asp-area="" asp-controller="Seller" asp-action="Browse" class="nav-link"><i class="fas fa-store"></i>Sellers</a></li>
				<li><a asp-area="" asp-controller="Category" asp-action="Browse" class="nav-link"><i class="fas fa-list"></i>Categories</a></li>
				<li><a asp-area="" asp-controller="Product" asp-action="All" class="nav-link"><i class="fas fa-tag"></i>Products</a></li>
				<li><a href="#" class="nav-link"><i class="fas fa-percent"></i>Deals</a></li>
			</ul>

			<!-- Search Bar -->
			<div class="search-container">
				<form asp-controller="Product" asp-action="Index" method="get" class="d-flex">
					<input type="text"
						   placeholder="Search for products, brands, and more..."
						   name="searchString"
						   value="@(ViewData["CurrentFilter"] ?? string.Empty)"
						   id="searchInput"
						   class="form-control me-2" />
					<button type="submit" class="btn btn-primary search-btn" id="searchBtn">
						<i class="fas fa-search"></i>
					</button>
				</form>
				<style>
					.search-container form {
						display: flex;
						align-items: center;
					}
				</style>
			</div>

			<!-- Icons & User Menu -->
			<div class="nav-icons">
				<!-- Wishlist -->
				<a href="#" class="icon-button" title="Wishlist">
					<i class="fas fa-heart"></i>
					<span class="wishlist-count">3</span>
				</a>

				<!-- Shopping Cart -->
				<a href="#" class="icon-button" title="Shopping Cart">
					<i class="fas fa-shopping-cart"></i>
					<span class="cart-count">5</span>
				</a>

				<!-- User Menu -->
				<div class="user-menu">
					<button class="user-btn" id="accountButton">
						<i class="fas fa-user-circle"></i> Account
					</button>
					<div class="dropdown-content" id="dropdownMenu">
						<a href="#"><i class="fas fa-user"></i>My Profile</a>
						<a href="#"><i class="fas fa-box"></i>My Orders</a>
						<a href="#"><i class="fas fa-heart"></i>Wishlist</a>
						<a href="#"><i class="fas fa-cog"></i>Settings</a>
						<a href="#"><i class="fas fa-sign-out-alt"></i>Sign Out</a>
					</div>
				</div>
				<script>
					document.addEventListener("DOMContentLoaded", function () {
						const accountButton = document.getElementById("accountButton");
						const dropdownMenu = document.getElementById("dropdownMenu");

						if (accountButton && dropdownMenu) {
							accountButton.addEventListener("click", function (e) {
								e.stopPropagation();
								dropdownMenu.classList.toggle("show");
							});

							// Close if click outside
							document.addEventListener("click", function () {
								dropdownMenu.classList.remove("show");
							});
						}
					});
				</script>

			</div>
		</div>
	</nav>
	<main role="main">
		@RenderBody()

	</main>
	<!-- Page Content -->
	<div class="page-content">
		<h1 class="page-title">Our Featured Sellers</h1>

		<div class="sellers-grid">
			<div class="seller-card">
				<img src="https://via.placeholder.com/90/ff4757/ffffff?text=Samsung" alt="Samsung" class="seller-logo">
				<h3 class="seller-name">Samsung</h3>
				<p class="seller-desc">Electronics & Smart Devices</p>
			</div>

			<div class="seller-card">
				<img src="https://via.placeholder.com/90/333333/ffffff?text=Apple" alt="Apple" class="seller-logo">
				<h3 class="seller-name">Apple</h3>
				<p class="seller-desc">iPhone & Premium Products</p>
			</div>

			<div class="seller-card">
				<img src="https://via.placeholder.com/90/000000/ffffff?text=Nike" alt="Nike" class="seller-logo">
				<h3 class="seller-name">Nike</h3>
				<p class="seller-desc">Sports Apparel & Footwear</p>
			</div>

			<div class="seller-card">
				<img src="https://via.placeholder.com/90/1e3a8a/ffffff?text=Adidas" alt="Adidas" class="seller-logo">
				<h3 class="seller-name">Adidas</h3>
				<p class="seller-desc">Athletic Wear & Sneakers</p>
			</div>

			<div class="seller-card">
				<img src="https://via.placeholder.com/90/dc2626/ffffff?text=Sony" alt="Sony" class="seller-logo">
				<h3 class="seller-name">Sony</h3>
				<p class="seller-desc">Gaming & Entertainment</p>
			</div>

			<div class="seller-card">
				<img src="https://via.placeholder.com/90/059669/ffffff?text=HP" alt="HP" class="seller-logo">
				<h3 class="seller-name">HP</h3>
				<p class="seller-desc">Laptops & Computing</p>
			</div>
		</div>
	</div>
	<style>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}

		body {
			background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
			min-height: 100vh;
			color: #333;
			padding: 0;
			margin: 0;
		}

		.navbar {
			background: linear-gradient(135deg, #ff4757 0%, #ff3838 50%, #c44569 100%);
			padding: 0;
			box-shadow: 0 6px 25px rgba(255, 71, 87, 0.4);
			position: sticky;
			top: 0;
			z-index: 1000;
			backdrop-filter: blur(10px);
		}

		.nav-container {
			max-width: 1400px;
			margin: 0 auto;
			display: flex;
			align-items: center;
			justify-content: space-between;
			padding: 15px 20px;
			min-height: 70px;
		}

		.logo {
			font-size: 32px;
			font-weight: 900;
			color: white;
			text-decoration: none;
			letter-spacing: 2px;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
		}

			.logo i {
				margin-right: 10px;
				font-size: 28px;
			}

			.logo span {
				color: #ffd700;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
			}

			.logo:hover {
				transform: scale(1.05);
				color: #ffd700;
			}

				.logo:hover span {
					color: #ffffff;
					text-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
				}

		.nav-links {
			display: flex;
			list-style: none;
			gap: 8px;
			align-items: center;
			margin: 0;
			padding: 0;
		}

		.nav-link {
			color: white;
			text-decoration: none;
			font-weight: 600;
			transition: all 0.3s ease;
			padding: 12px 20px;
			border-radius: 25px;
			position: relative;
			overflow: hidden;
			font-size: 15px;
			display: flex;
			align-items: center;
		}

			.nav-link i {
				margin-right: 8px;
				font-size: 16px;
			}

			.nav-link::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
				transition: left 0.5s ease;
			}

			.nav-link:hover::before {
				left: 100%;
			}

			.nav-link:hover {
				background: rgba(255, 255, 255, 0.25);
				transform: translateY(-3px);
				box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
			}

			.nav-link.active {
				background: rgba(255, 255, 255, 0.3);
				box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
			}

		.search-container {
			display: flex;
			align-items: center;
			background: white;
			border-radius: 30px;
			padding: 8px 20px;
			margin: 0 20px;
			flex-grow: 1;
			max-width: 450px;
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
			border: 2px solid transparent;
			transition: all 0.3s ease;
		}

			.search-container:focus-within {
				border-color: #ffd700;
				box-shadow: 0 6px 20px rgba(255, 215, 0, 0.3);
				transform: translateY(-2px);
			}

			.search-container input {
				border: none;
				outline: none;
				flex-grow: 1;
				padding: 10px;
				font-size: 16px;
				background: transparent;
				width: 100%;
			}

				.search-container input::placeholder {
					color: #999;
				}

		.search-btn {
			background: linear-gradient(135deg, #ff4757, #ff3838);
			border: none;
			color: white;
			padding: 10px 18px;
			border-radius: 25px;
			cursor: pointer;
			margin-left: 10px;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 16px;
			font-weight: bold;
			box-shadow: 0 3px 10px rgba(255, 71, 87, 0.3);
		}

			.search-btn:hover {
				background: linear-gradient(135deg, #ff3838, #c44569);
				transform: scale(1.05);
				box-shadow: 0 5px 15px rgba(255, 71, 87, 0.5);
			}

			.search-btn:active {
				transform: scale(0.95);
			}

		.nav-icons {
			display: flex;
			align-items: center;
			gap: 15px;
		}

		.icon-button {
			color: white;
			text-decoration: none;
			position: relative;
			padding: 12px;
			border-radius: 50%;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			justify-content: center;
			width: 44px;
			height: 44px;
			font-size: 18px;
			background: rgba(255, 255, 255, 0.1);
		}

			.icon-button:hover {
				background: rgba(255, 255, 255, 0.25);
				transform: scale(1.1) translateY(-2px);
				box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
			}

			.icon-button:active {
				transform: scale(1);
			}

		.cart-count, .wishlist-count {
			position: absolute;
			top: -3px;
			right: -3px;
			background: linear-gradient(135deg, #ffd700, #ffb600);
			color: #333;
			border-radius: 50%;
			width: 22px;
			height: 22px;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 11px;
			font-weight: bold;
			border: 2px solid white;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
			animation: pulse 2s infinite;
		}

		@@keyframes pulse {
			0%, 100% {
				transform: scale(1);
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
			}

			50% {
				transform: scale(1.1);
				box-shadow: 0 4px 15px rgba(255, 215, 0, 0.5);
			}
		}

		.user-menu {
			position: relative;
			display: inline-block;
		}

		.user-btn {
			background: rgba(255, 255, 255, 0.2);
			border: 2px solid rgba(255, 255, 255, 0.3);
			color: white;
			padding: 10px 20px;
			border-radius: 25px;
			cursor: pointer;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			gap: 8px;
			font-weight: 600;
			font-size: 14px;
			backdrop-filter: blur(5px);
		}

			.user-btn:hover {
				background: rgba(255, 255, 255, 0.3);
				border-color: #ffd700;
				transform: translateY(-2px);
				box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
			}

			.user-btn:active {
				transform: translateY(0);
			}

		/* Dropdown Menu */
		.dropdown-content {
			display: none;
			position: absolute;
			right: 0;
			top: 100%;
			background-color: white;
			min-width: 220px;
			box-shadow: 0 8px 25px rgba(0,0,0,0.15);
			border-radius: 12px;
			z-index: 1001;
			margin-top: 15px;
			opacity: 0;
			transform: translateY(-10px) scale(0.95);
			transition: all 0.3s ease;
			overflow: hidden;
		}

			.dropdown-content.show {
				display: block;
				opacity: 1;
				transform: translateY(0) scale(1);
				animation: dropdownAppear 0.4s ease;
			}

			.dropdown-content a {
				color: #333;
				padding: 14px 20px;
				text-decoration: none;
				display: flex;
				align-items: center;
				transition: all 0.2s ease;
				border-bottom: 1px solid #f1f1f1;
				font-weight: 500;
			}

				.dropdown-content a:hover {
					background-color: #ffefef;
					padding-left: 25px;
					color: #ff4757;
				}

				.dropdown-content a:last-child {
					border-bottom: none;
					color: #ff3838;
				}

				.dropdown-content a i {
					margin-right: 12px;
					width: 20px;
					text-align: center;
				}

		@@keyframes dropdownAppear {
			0% {
				opacity: 0;
				transform: translateY(-10px) scale(0.95);
			}

			100% {
				opacity: 1;
				transform: translateY(0) scale(1);
			}
		}

		/* Mobile Menu Toggle */
		.hamburger {
			display: none;
			flex-direction: column;
			justify-content: space-around;
			width: 30px;
			height: 25px;
			background: transparent;
			border: none;
			cursor: pointer;
			padding: 0;
		}

			.hamburger span {
				width: 100%;
				height: 3px;
				background-color: white;
				border-radius: 5px;
				transition: all 0.3s ease;
				transform-origin: center;
			}

		/* Demo Content */
		.page-content {
			max-width: 1200px;
			margin: 30px auto;
			padding: 20px;
			background: white;
			border-radius: 15px;
			box-shadow: 0 8px 25px rgba(0,0,0,0.1);
		}

		.page-title {
			color: #ff4757;
			margin-bottom: 20px;
			padding-bottom: 15px;
			border-bottom: 3px solid #ffefef;
			font-size: 2.2em;
			font-weight: 700;
		}

		.sellers-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
			gap: 25px;
			margin-top: 30px;
		}

		.seller-card {
			background: linear-gradient(135deg, #f9f9f9, #ffffff);
			border-radius: 15px;
			padding: 25px;
			text-align: center;
			transition: all 0.3s ease;
			border: 2px solid #eee;
			box-shadow: 0 4px 15px rgba(0,0,0,0.05);
		}

			.seller-card:hover {
				transform: translateY(-8px);
				box-shadow: 0 15px 35px rgba(0,0,0,0.15);
				border-color: #ff4757;
			}

		.seller-logo {
			width: 90px;
			height: 90px;
			border-radius: 50%;
			object-fit: cover;
			margin-bottom: 20px;
			border: 3px solid #ff4757;
			padding: 3px;
			transition: all 0.3s ease;
		}

		.seller-card:hover .seller-logo {
			transform: scale(1.1);
			border-color: #ffd700;
		}

		.seller-name {
			font-weight: bold;
			color: #333;
			margin-bottom: 8px;
			font-size: 1.2em;
		}

		.seller-desc {
			color: #666;
			font-size: 0.95em;
			line-height: 1.4;
		}

		/* Responsive Design */
		@@media (max-width: 1024px) {
			.search-container {
				max-width: 300px;
			}

			.nav-links {
				gap: 5px;
			}

			.nav-link {
				padding: 10px 15px;
				font-size: 14px;
			}
		}

		@@media (max-width: 768px) {
			.hamburger {
				display: flex;
			}

			.nav-links {
				display: none;
				width: 100%;
				flex-direction: column;
				gap: 15px;
				margin-top: 20px;
				background: rgba(255, 71, 87, 0.95);
				padding: 20px;
				border-radius: 15px;
				backdrop-filter: blur(10px);
			}

				.nav-links.active {
					display: flex;
					animation: slideIn 0.5s ease;
				}

			.search-container {
				margin: 15px 0;
				width: 100%;
				order: 3;
			}

			.nav-container {
				flex-wrap: wrap;
			}

			.hamburger.active span:nth-child(1) {
				transform: rotate(45deg) translate(6px, 6px);
			}

			.hamburger.active span:nth-child(2) {
				opacity: 0;
			}

			.hamburger.active span:nth-child(3) {
				transform: rotate(-45deg) translate(6px, -6px);
			}

			.dropdown-content {
				right: -20px;
				min-width: 200px;
			}

			.sellers-grid {
				grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				gap: 20px;
			}
		}

		@@keyframes slideIn {
			from {
				opacity: 0;
				transform: translateY(-20px);
			}

			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@@media (max-width: 480px) {
			.nav-container {
				padding: 10px 15px;
			}

			.logo {
				font-size: 24px;
			}

			.nav-icons {
				gap: 10px;
			}

			.user-btn {
				padding: 8px 15px;
				font-size: 13px;
			}

			.sellers-grid {
				grid-template-columns: 1fr;
			}
		}
	</style>
</body>
</html>