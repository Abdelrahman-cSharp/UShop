@{
	ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100"
		 style="background: linear-gradient(to right, #fbc2eb, #a6c1ee);">
	<div class="card shadow-lg p-4 rounded-4 border-0" style="width: 400px;">
		<div class="text-center mb-4">
			<i class="fa-solid fa-right-to-bracket fa-3x" style="color:#ff4081;"></i>
			<h3 class="fw-bold mt-2 text-dark">Welcome Back</h3>
			<p class="text-muted">Login to continue shopping</p>
		</div>

		<form>
			<div class="mb-3">
				<label class="form-label fw-semibold">Email</label>
				<input type="email" class="form-control rounded-pill" placeholder="Enter your email">
			</div>

			<div class="mb-3">
				<label class="form-label fw-semibold">Password</label>
				<input type="password" class="form-control rounded-pill" placeholder="Enter your password">
			</div>

			<div class="d-flex justify-content-between align-items-center mb-3">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="rememberMe">
					<label class="form-check-label" for="rememberMe">Remember me</label>
				</div>
				<a href="#" class="text-decoration-none" style="color:#ff4081;">Forgot Password?</a>
			</div>

			<button type="submit"
							class="btn w-100 rounded-pill fw-bold text-white"
							style="background: linear-gradient(to right, #ff6a88, #ff99ac);">
				Login
			</button>
		</form>

		<p class="text-center mt-3">
			Don’t have an account?
			<a asp-controller="Account" asp-action="Register"
				 class="fw-bold text-decoration-none" style="color:#2196f3;">Sign Up</a>
		</p>
	</div>
</div>
