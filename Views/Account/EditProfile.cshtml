@model UShop.Models.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>
                        Edit Profile
                    </h3>
                    <p class="mb-0 opacity-75">Update your @Model.UserType.ToString().ToLower() information</p>
                </div>

                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data" id="profileForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserType" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CanEdit" />
                        <input type="hidden" asp-for="IsOwnProfile" />
                        <input type="hidden" asp-for="CurrentImageUrl" />

                        <!-- Basic Information -->
                        <div class="row">
                            <div class="col-12">
                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-user me-2"></i>Basic Information
                                </h5>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">Full Name <span class="text-danger">*</span></label>
                                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter your full name" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                                <input asp-for="Email" class="form-control form-control-lg" readonly style="background-color: #f8f9fa;" />
                                <small class="text-muted">Email cannot be changed</small>
                            </div>

                            @if (Model.UserType == UserType.Customer || Model.UserType == UserType.Seller)
                            {
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Enter your phone number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            }

                            @if (Model.UserType == UserType.Admin)
                            {
                                <div class="col-12 mb-3">
                                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter admin description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            }

                            @if (Model.UserType == UserType.Seller)
                            {
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-semibold">Profile Image</label>
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                                            {
                                                <img src="@Model.CurrentImageUrl" alt="Current Profile" 
                                                     class="img-thumbnail rounded-circle" style="width: 80px; height: 80px; object-fit: cover;"
                                                     onerror="this.src='/images/avatars/default.png';">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" 
                                                     style="width: 80px; height: 80px;">
                                                    <i class="fas fa-user fa-2x text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-9">
                                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(this)" />
                                            <small class="text-muted">Upload a new profile image (optional)</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Address Section for Customers -->
                        @if (Model.UserType == UserType.Customer)
                        {
                            <hr class="my-4" />
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="mb-3 text-primary">
                                        <i class="fas fa-map-marker-alt me-2"></i>Address Information
                                    </h5>
                                </div>

                                <div class="col-12 mb-3">
                                    <label asp-for="Address.Street" class="form-label fw-semibold">Street Address</label>
                                    <input asp-for="Address.Street" class="form-control form-control-lg" placeholder="Enter your street address" />
                                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Address.City" class="form-label fw-semibold">City</label>
                                    <input asp-for="Address.City" class="form-control form-control-lg" placeholder="Enter your city" />
                                    <span asp-validation-for="Address.City" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Address.Country" class="form-label fw-semibold">Country</label>
                                    <input asp-for="Address.Country" class="form-control form-control-lg" placeholder="Enter your country" />
                                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                                </div>
                            </div>
                        }

                        <hr class="my-4" />

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Profile
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
</div>
                    </form>
                </div>
            </div>
        </div>
    </div>
