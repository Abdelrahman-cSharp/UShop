@model UShop.Models.Customer

@{
    ViewData["Title"] = "Customer Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-3 shadow-sm mb-3" style="max-width: 600px;">
    <h3>@Model.FullName</h3>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    <p><strong>Address:</strong> @Model.Address</p>

    @if (Model.User != null)
    {
        <p><strong>Username:</strong> @Model.User.UserName</p>
    }

    @if (Model.Cart != null && Model.Cart.Items.Any())
    {
        <h4>Cart Items:</h4>
        <ul>
            @foreach (var item in Model.Cart.Items)
            {
                <li>@item.Product.Name - Quantity: @item.Quantity</li>
            }
        </ul>
    }

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <h4>Orders:</h4>
        <ul>
            @foreach (var order in Model.Orders)
            {
                <li>Order #@order.Id - Total: @order.TotalAmount.ToString("C") - Status: @order.Status</li>
            }
        </ul>
    }
</div>
