@model UShop.Models.Category
@{
    ViewData["Title"] = "Category Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title mb-0">Category Details</h1>
            </div>
            <div class="card-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-3">Category Name:</dt>
                    <dd class="col-sm-9">
                        <h4>@Html.DisplayFor(model => model.Name)</h4>
                    </dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model?.Description))
                        {
                            <p>@Html.DisplayFor(model => model.Description)</p>
                        }
                        else
                        {
                            <span class="text-muted">No description available</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Products Count:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info fs-6">
                            @(Model?.Products?.Count ?? 0) Products
                        </span>
                    </dd>
                </dl>

                @if (Model?.Products != null && Model.Products.Any())
                {
                    <hr />
                    <h5>Products in this Category:</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products.Take(5))
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>$@product.Price</td>
                                        <td>@product.StockQuantity</td>
                                    </tr>
                                }
                                @if (Model.Products.Count > 5)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">
                                            ... and @(Model.Products.Count - 5) more products
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit Category
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Category
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-controller="Products" asp-action="Create" class="btn btn-success btn-block mb-2 w-100">
                    <i class="fas fa-plus"></i> Add Product to Category
                </a>

                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model?.Id" class="btn btn-outline-primary btn-block w-100 mb-2">
                    <i class="fas fa-list"></i> View All Products
                </a>

                <button class="btn btn-outline-info btn-block w-100" onclick="sharCategory()">
                    <i class="fas fa-share"></i> Share Category
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function shareCategory() {
        const url = window.location.href;
        if (navigator.share) {
            navigator.share({
                title: 'Category: @Model?.Name',
                text: 'Check out this category on UShop',
                url: url,
               
            });
        } else {
            navigator.clipboard.writeText(url).then(() => {
                alert('Category link copied to clipboard!');
            });
        }
    }
</script>

