@model List<UShop.Models.Category>
@{
    ViewData["Title"] = "UShop - Home";
}

@functions {
    private static string GetRandomColor()
    {
        var colors = new[] { "#e0f7fa", "#fce4ec", "#f3e5f5", "#fff3e0", "#f9fbe7", "#ede7f6" };
        var rand = new Random();
        return colors[rand.Next(colors.Length)];
    }
}

<div class="container mt-5">

    <!-- Hero Section -->
    <div class="p-5 mb-5 text-center text-white rounded shadow-lg"
         style="background: linear-gradient(90deg, #ff6a00, #ee0979);">
        <h1 class="display-3 fw-bold">🛒 Welcome to <span style="color: #ffd700;">UShop</span></h1>
        <p class="lead">Your one-stop shop for trendy, stylish, and affordable products.</p>
        <a asp-controller="Category" asp-action="Browse"
           class="btn btn-warning btn-lg me-2 fw-bold shadow">
            ✨ Browse Categories
        </a>
        <a asp-controller="Cart" asp-action="Index"
           class="btn btn-light btn-lg fw-bold shadow">
            🛍️ View Cart
        </a>
    </div>

    <!-- Categories Section -->
    <h2 class="text-center mb-4 fw-bold text-primary">🗂️ Shop by Categories</h2>
    <div class="swiper myCategorySwiper">
        <div class="swiper-wrapper">
            @if (Model != null && Model.Any())
            {
                foreach (var category in Model)
                {
                    <div class="swiper-slide">
                        <a asp-controller="Product" asp-action="ByCategory" asp-route-categoryId="@category.Id"
                          
                           class="text-decoration-none w-100 h-100 d-block">
                            <div class="card h-100 border-0 shadow-lg"
                                 style="background:@GetRandomColor(); width:100%; height:100vh;">
                                <img src="~/images/electronics.jpg"
                                     class="card-img-top"
                                     alt="@category.Name"
                                     style="max-height:400px; object-fit:cover;">
                                <div class="card-body text-dark text-center">
                                    <h5 class="card-title fw-bold">@category.Name</h5>
                                    <p class="card-text">
                                        @(!string.IsNullOrEmpty(category.Description)
                                            ? category.Description
                                            : "No description available")
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="swiper-slide text-center">
                    <div class="alert alert-info">No categories available</div>
                </div>
            }
        </div>

        <!-- Button from Right ,Left of Category -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

    <!-- Featured Products -->
    <h2 class="text-center mt-5 mb-4 fw-bold text-success">🌟 Featured Products</h2>
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-lg">
                <span class="badge bg-danger position-absolute mt-2 ms-2">Sale</span>
                <img src="~/images/product1.jpg" class="card-img-top" alt="Product 1">
                <div class="card-body">
                    <h5 class="card-title">Wireless Headphones</h5>
                    <p class="card-text text-success fw-bold">$49.99</p>
                    <a href="/Products/Details/1" class="btn btn-success fw-bold">Buy Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-lg">
                <span class="badge bg-primary position-absolute mt-2 ms-2">Hot</span>
                <img src="~/images/product2.jpg" class="card-img-top" alt="Product 2">
                <div class="card-body">
                    <h5 class="card-title">Smart Watch</h5>
                    <p class="card-text text-primary fw-bold">$79.99</p>
                    <a href="/Products/Details/2" class="btn btn-primary fw-bold">Buy Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-lg">
                <span class="badge bg-warning text-dark position-absolute mt-2 ms-2">New</span>
                <img src="~/images/product3.jpg" class="card-img-top" alt="Product 3">
                <div class="card-body">
                    <h5 class="card-title">Casual Shoes</h5>
                    <p class="card-text text-warning fw-bold">$29.99</p>
                    <a href="/Products/Details/3" class="btn btn-warning text-dark fw-bold">Buy Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-lg">
                <span class="badge bg-success position-absolute mt-2 ms-2">Best</span>
                <img src="~/images/product4.jpg" class="card-img-top" alt="Product 4">
                <div class="card-body">
                    <h5 class="card-title">Gaming Laptop</h5>
                    <p class="card-text text-danger fw-bold">$999.99</p>
                    <a href="/Products/Details/4" class="btn btn-danger fw-bold">Buy Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Products -->
    <h2 class="text-center mt-5 mb-4 fw-bold text-secondary">🆕 Latest Products</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow">
                <img src="~/images/sample1.jpg" class="card-img-top" alt="Product 1">
                <div class="card-body">
                    <h5 class="card-title">Sample Product 1</h5>
                    <p class="card-text">Short description of product 1.</p>
                    <p class="fw-bold text-success">$25.00</p>
                    <a href="#" class="btn btn-sm btn-ushop">Add to Cart</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow">
                <img src="~/images/sample2.jpg" class="card-img-top" alt="Product 2">
                <div class="card-body">
                    <h5 class="card-title">Sample Product 2</h5>
                    <p class="card-text">Short description of product 2.</p>
                    <p class="fw-bold text-success">$40.00</p>
                    <a href="#" class="btn btn-sm btn-ushop">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>

