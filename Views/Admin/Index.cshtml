@model IEnumerable<UShop.Models.Admin>

@{
    ViewData["Title"] = "Admin List";
}

<div class="hero">
    <h1>@ViewData["Title"]</h1>
    <p>Manage all registered admins in the system</p>
</div>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-ushop">Add New Admin</a>
</div>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.FullName</td>
                    <td>@admin.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-sm btn-secondary me-2">Edit</a>

                        <!-- زرار يفتح الـ Modal -->
                        <button type="button" class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal"
                                data-id="@admin.Id"
                                data-name="@admin.FullName">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No admins found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="deleteMessage">Are you sure you want to delete this admin?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var adminId = button.getAttribute('data-id');
            var adminName = button.getAttribute('data-name');
            var form = document.getElementById('deleteForm');
            var message = document.getElementById('deleteMessage');

            form.action = '/Admin/Delete/' + adminId;
            message.textContent = 'Are you sure you want to delete admin "' + adminName + '"?';
        });
    </script>
}
