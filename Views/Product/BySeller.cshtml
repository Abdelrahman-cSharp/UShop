@model IEnumerable<UShop.Models.Product>

@{
    ViewData["Title"] = "Products by " + ViewBag.SellerName;
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">Products by @ViewBag.SellerName</h2>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/placeholder.png" : product.ImageUrl)"
                             class="card-img-top" style="height:200px;object-fit:cover;" alt="@product.Name" />
                    </a>
                    <div class="card-body">
                        <h6 class="card-title">@product.Name</h6>
                        <p class="fw-bold text-success mb-0">$@product.Price</p>
                        <small class="text-muted">@product.Category?.Name</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
